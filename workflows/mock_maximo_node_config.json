# Alternative N8N Configuration for Mock Maximo Data
# Use this configuration while waiting for real Maximo access

{
  "parameters": {
    "url": "http://localhost:5000/api/mock/maximo",
    "authentication": "none",
    "sendQuery": true,
    "queryParameters": {
      "parameters": [
        {
          "name": "type",
          "value": "assets"
        },
        {
          "name": "since",
          "value": "{{ $now.minus({days: 1}).toISO() }}"
        }
      ]
    },
    "sendHeaders": true,
    "headerParameters": {
      "parameters": [
        {
          "name": "Accept",
          "value": "application/json"
        }
      ]
    },
    "options": {
      "response": {
        "response": {
          "responseFormat": "json"
        }
      }
    }
  }
}

# This will call a mock endpoint you can create in your backend
# Once real Maximo access is available, just update the URL and add credentials